{
  "$schema": "node_modules/lerna/schemas/lerna-schema.json",
  "useWorkspaces": true,
  "npmClient": "yarn",
  "version": "0.0.4-alpha.0",
  "packages": [
    "packages/angular-workspace/projects/web-components-angular",
    "packages/*"
  ],
  "command": {
    "version": {
      "noChangelog": true,
      "noCommitHooks": true,
      "noGitTagVersion": true,
      "noPush": true,
      "forcePublish": true
    },
    "publish": {
      "noGitReset": true,
      "verifyAccess": false,
      "registry": "http://localhost:4873",
      "noChangelog": true,
      "noCommitHooks": true,
      "noGitTagVersion": true,
      "noPush": true,
      "forcePublish": true
    }
  }
}
